<Window x:Class="studentoo.loginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:studentoo"
        mc:Ignorable="d"
        Title="loginPage" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txtLogin" HorizontalAlignment="Center" Margin="0,142,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <Label Content="LOGIN:" HorizontalAlignment="Center" Margin="0,98,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Label Content="HASŁO:" HorizontalAlignment="Center" Margin="0,185,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Button x:Name="btnLogin" Content="Zatwierdź" HorizontalAlignment="Center" Margin="0,270,0,0" VerticalAlignment="Top" Grid.Column="1" Click="btnLogin_Click"/>
        <PasswordBox x:Name="txtHaslo" HorizontalAlignment="Center" Margin="0,217,0,0" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
    </Grid>
</Window>
