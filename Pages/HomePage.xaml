<Page x:Class="studentoo.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="HomePage" Height="Auto" Width="Auto">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <!-- Karty użytkowników -->
        <ItemsControl x:Name="UsersCardsContainer" Grid.RowSpan="2">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="White" CornerRadius="15" Margin="10" 
                            Width="450" Height="600">
                        <Grid>
                            <Image Source="{Binding PhotoUrl}" Stretch="UniformToFill"/>
                            <Border Background="#80000000" CornerRadius="0,0,15,15" 
                                    VerticalAlignment="Bottom" Height="120">
                                <StackPanel Margin="15">
                                    <TextBlock Text="{Binding Name}" Foreground="White" 
                                               FontSize="24" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Description}" Foreground="White" 
                                               FontSize="16" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                            <Button Content="Zobacz profil" HorizontalAlignment="Center" 
                                    VerticalAlignment="Bottom" Margin="0,0,0,20" 
                                    Background="#FFFE3C72" Foreground="White"
                                    Click="ViewProfile_Click" Tag="{Binding Id}"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Page>