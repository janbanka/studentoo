<Page x:Class="studentoo.loginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:studentoo"
      mc:Ignorable="d"
      Title="Logowanie"
      Background="#FFF5F5F5">

    <Grid>
        <!-- Kontener formularza -->
        <Border Background="White" 
                CornerRadius="12" 
                Padding="40"
                BorderBrush="#E0E0E0" 
                BorderThickness="1"
                VerticalAlignment="Center" 
                HorizontalAlignment="Center"
                Width="380"
                Height="480"
                Effect="{StaticResource ShadowEffect}">

            <StackPanel Orientation="Vertical" 
                       HorizontalAlignment="Center" 
                       Width="260">

                <!-- Logo/nagłówek -->
                <TextBlock Text="Studentoo" 
                           FontSize="28" 
                           FontWeight="Bold"
                           Foreground="#FFFE3C72"
                           TextAlignment="Center" 
                           Margin="0,0,0,30"/>

                <!-- Pole login -->
                <TextBlock Text="Login" 
                           Foreground="#555555"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="txtLogin" 
                         Height="40" 
                         Padding="10,5"
                         FontSize="14"
                         Style="{StaticResource MinimalTextBox}"/>

                <!-- Pole hasło -->
                <TextBlock Text="Hasło" 
                           Foreground="#555555"
                           Margin="0,15,0,5"/>
                <PasswordBox x:Name="txtHaslo" 
                             Height="40" 
                             Padding="10,5"
                             FontSize="14"
                             Style="{StaticResource MinimalPasswordBox}"/>

                <!-- Przycisk logowania -->
                <Button x:Name="btnLogin" 
                        Content="Zaloguj się" 
                        Height="45" 
                        Margin="0,30,0,15"
                        Style="{StaticResource PrimaryButtonStyle}" Click="btnLogin_Click"/>

                <!-- Separator -->
                <Border Height="1" 
                        Background="#EEEEEE" 
                        Margin="0,10"/>

                <!-- Przycisk rejestracji -->
                <Button x:Name="btnRejestracja" 
                        Content="Załóż nowe konto" 
                        Height="40"
                        Style="{StaticResource SecondaryButtonStyle}" Click="btnRejestracja_Click"/>
            </StackPanel>
        </Border>
        <Border x:Name="SnackbarContainer"
            Style="{StaticResource GlobalSnackbarStyle}"
            Visibility="Collapsed">
            <TextBlock x:Name="SnackbarMessage" 
                   Style="{StaticResource GlobalSnackbarMessageStyle}"/>
        </Border>
    </Grid>

    <Page.Resources>
        <!-- LinkButton (jeśli potrzebujesz) -->
        <Style x:Key="LinkButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#FFFE3C72"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock Text="{TemplateBinding Content}" 
                               TextDecorations="Underline"
                               Padding="5"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#FFC92A5D"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>
</Page>