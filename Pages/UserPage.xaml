<Page x:Class="studentoo.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:studentoo"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="500"
      Title="Profil użytkownika"
      Background="#FFECECEC">

    <Grid>
        <!-- Górny pasek z przyciskiem powrotu -->
        <Border Background="#FFFE3C72" Height="60" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Button x:Name="btnBack"  Content="←" FontSize="20" 
                        Foreground="White" Margin="10,0" Click="btnBack_Click"/>
                <TextBlock Text="Profil" Foreground="White" FontSize="18" FontWeight="Bold" 
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Główna zawartość profilu -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,60,0,100">
            <StackPanel>
                <!-- Karta profilowa -->
                <Border Background="White" CornerRadius="15" Margin="15" Padding="0" 
                        BorderBrush="#E0E0E0" BorderThickness="1" 
                        HorizontalAlignment="Center" Width="450">
                    <Grid>
                        <!-- Zdjęcie profilowe -->
                        <Border Height="450" Background="#FFFE3C72" CornerRadius="15,15,0,0">
                            <Image x:Name="imgProfile" Stretch="UniformToFill" 
                                   />
                        </Border>

                        <!-- Informacje o użytkowniku -->
                        <Border Background="White" CornerRadius="0,0,15,15" 
        VerticalAlignment="Bottom" Height="200" Margin="0,350,0,0">
                            <StackPanel Margin="20,10">
                                <TextBlock x:Name="txtUserName" Text="Jan Kowalski, 25" 
                   FontSize="24" FontWeight="Bold"/>
                              

                                <!-- Zainteresowania -->
                                <WrapPanel Margin="0,10,0,0">
                                    <Border Background="#FFFE3C72" CornerRadius="15" Padding="8,5" Margin="0,0,5,5">
                                        <TextBlock Text="Góry" Foreground="White" FontSize="12"/>
                                    </Border>
                                    <Border Background="#FFFE3C72" CornerRadius="15" Padding="8,5" Margin="0,0,5,5">
                                        <TextBlock Text="Fotografia" Foreground="White" FontSize="12"/>
                                    </Border>
                                    <Border Background="#FFFE3C72" CornerRadius="15" Padding="8,5" Margin="0,0,5,5">
                                        <TextBlock Text="Podróże" Foreground="White" FontSize="12"/>
                                    </Border>
                                    <Border Background="#FFFE3C72" CornerRadius="15" Padding="8,5" Margin="0,0,5,5">
                                        <TextBlock Text="Kawa" Foreground="White" FontSize="12"/>
                                    </Border>
                                </WrapPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- Sekcja "O mnie" -->
                <Border Background="White" CornerRadius="15" Margin="15" Padding="20">
                    <StackPanel>
                        <TextBlock Text="O mnie" FontSize="18" FontWeight="Bold"/>
                        <TextBlock x:Name="txtBio" Text="Jestem studentem 3 roku informatyki. Uwielbiam podróże, fotografię i dobrą kawę. Szukam osób do wspólnych wycieczek górskich." 
                                   FontSize="14" Margin="0,10,0,0" TextWrapping="Wrap"/>
                        <TextBox x:Name="txtBioEdit"
                 FontSize="14" Margin="0,10,0,0"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 Visibility="Collapsed"
                 Height="100"/>
                    </StackPanel>
                </Border>

               
                
            </StackPanel>
        </ScrollViewer>

        <!-- Dolny pasek z przyciskami akcji -->
        <Border Background="White" Height="80" VerticalAlignment="Bottom">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button x:Name="btnMessage" Content="💬" FontSize="24" 
            Foreground="#4CAF50" Margin="0,0,20,0" Click="btnMessage_Click"/>

                <Button x:Name="btnEdit" Content="✏️" FontSize="24" 
            Foreground="#2196F3" Click="btnEdit_Click"/>
                <Button x:Name="btnSave" Content="💾" FontSize="24" 
                Foreground="#FF9800" Visibility="Collapsed" Click="btnSave_Click"/>
            </StackPanel>
        </Border>
    </Grid>

    <Page.Resources>
        <!-- Style przycisków -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="30">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Page.Resources>
</Page>