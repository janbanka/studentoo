<Page x:Class="studentoo.Pages.LandingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:studentoo.Pages"
      mc:Ignorable="d" 
      
      Title="LandingPage"
  Background="#F9F5F0">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <!-- Logo -->
            <Image Source="/assets/LandingPage.png"
                   Width="150" Height="150"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20" />

            <!-- Nazwa -->
            <TextBlock Text="studentoo"
                       FontSize="36"
                       FontWeight="Bold"
                       Foreground="#202020"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10" />

            <!-- Slogan -->
            <TextBlock Text="Poznawaj studentów z pasją – tak jak Ty!"
                       FontSize="16"
                       Foreground="#606060"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30" />

            <!-- Przycisk -->
            <Button Content="Dołącz teraz"
                    Width="200"
                    Height="45"
                    Background="#E53935"
                    Foreground="White"
                    FontSize="16"
                    FontWeight="Bold"
                    Cursor="Hand"
                    BorderThickness="0"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,0">
                <Button.Effect>
                    <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.3"/>
                </Button.Effect>
            </Button>

        </StackPanel>
    </Grid>
</Page>